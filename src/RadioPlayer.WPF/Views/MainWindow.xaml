<Window x:Class="RadioPlayer.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:RadioPlayer.WPF.Helpers"
        mc:Ignorable="d"
        Title="{helpers:Translate MainWindow.Title}"
        Height="1000"
        Width="1280"
        MinHeight="700"
        MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- App Bar -->
                <RowDefinition Height="*"/>     <!-- Main Content -->
                <RowDefinition Height="Auto"/> <!-- Player Controls -->
            </Grid.RowDefinitions>

            <!-- Material Design App Bar / Header -->
            <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryDark" Padding="16" materialDesign:ElevationAssist.Elevation="Dp4">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <materialDesign:PackIcon Kind="Radio" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{helpers:Translate AppName}" FontSize="20" FontWeight="Medium"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <materialDesign:PackIcon Kind="PlayCircle"
                                                        Width="16" Height="16"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,6,0"
                                                        Visibility="{Binding CurrentlyPlayingStation, Converter={StaticResource NullToVisibilityConverter}}"/>
                                <TextBlock VerticalAlignment="Center" Opacity="0.9">
                                    <Run Text="{Binding CurrentlyPlayingStation.Name, Mode=OneWay}" FontWeight="Medium"/>
                                    <Run Text=" â€¢ " Foreground="{DynamicResource PrimaryHueLightBrush}"/>
                                    <Run Text="{Binding CurrentTrack, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock Text="{helpers:Translate MainWindow.SelectStation}"
                                      FontSize="12"
                                      Opacity="0.7"
                                      TextTrimming="CharacterEllipsis"
                                      Visibility="{Binding CurrentlyPlayingStation, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding ShowAboutCommand}"
                                ToolTip="{helpers:Translate Menu.About}"
                                Margin="8,0">
                            <materialDesign:PackIcon Kind="InformationVariant"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding OpenSettingsCommand}"
                                ToolTip="{helpers:Translate Menu.Settings}"
                                Margin="8,0">
                            <materialDesign:PackIcon Kind="Settings"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding ShowStreamInfoCommand}"
                                IsEnabled="{Binding SelectedStation, Converter={StaticResource NullToBooleanConverter}}"
                                ToolTip="{helpers:Translate Menu.StreamInfo}"
                                Margin="8,0">
                            <materialDesign:PackIcon Kind="InformationOutline"/>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar Navigation -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,16,0" materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel Margin="16">
                        <TextBlock Text="{helpers:Translate Browse.Title}"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"
                                  Margin="0,0,0,12"/>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding LoadTopStationsCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TrendingUp" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{helpers:Translate Browse.TopStations}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding LoadFavoritesCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Star" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{helpers:Translate Browse.Favorites}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding ShowHistoryCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="History" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{helpers:Translate Browse.History}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,16" />

                        <TextBlock Text="{helpers:Translate Browse.CustomStations}"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"
                                  Margin="0,0,0,12"/>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding LoadCustomStationsCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Radio" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{helpers:Translate Browse.MyStations}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding AddCustomStationCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{helpers:Translate Browse.AddCustomStation}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding EditCustomStationCommand}"
                                IsEnabled="{Binding SelectedStation.IsCustom}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{helpers:Translate Browse.EditCustomStation}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding DeleteCustomStationCommand}"
                                IsEnabled="{Binding SelectedStation.IsCustom}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                Foreground="{DynamicResource ValidationErrorBrush}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{helpers:Translate Browse.DeleteCustomStation}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,16" />

                        <TextBlock Text="{helpers:Translate Browse.Filters}"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"
                                  Margin="0,0,0,12"/>

                        <ComboBox materialDesign:HintAssist.Hint="{helpers:Translate Browse.Country}"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 ItemsSource="{Binding AvailableCountries}"
                                 Text="{Binding CountryFilter, UpdateSourceTrigger=PropertyChanged}"
                                 IsEditable="True"
                                 Margin="0,0,0,12"/>

                        <TextBox materialDesign:HintAssist.Hint="{helpers:Translate Browse.Language}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding LanguageFilter, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12"/>

                        <TextBox materialDesign:HintAssist.Hint="{helpers:Translate Browse.Genre}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding GenreFilter, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12"/>

                        <ComboBox materialDesign:HintAssist.Hint="{helpers:Translate Browse.Codec}"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 Text="{Binding CodecFilter, UpdateSourceTrigger=PropertyChanged}"
                                 IsEditable="True"
                                 Margin="0,0,0,12">
                            <ComboBoxItem Content=""/>
                            <ComboBoxItem Content="MP3"/>
                            <ComboBoxItem Content="AAC"/>
                            <ComboBoxItem Content="OGG"/>
                        </ComboBox>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding LoadTopStationsCommand}"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilterOutline" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{helpers:Translate Browse.ApplyFilters}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </materialDesign:Card>

                <!-- Station List Area -->
                <materialDesign:Card Grid.Column="1" materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search Bar -->
                        <Grid Grid.Row="0" Margin="16,16,16,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                    materialDesign:HintAssist.Hint="{helpers:Translate Search.Placeholder}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,12,0">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SearchStationsCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>

                            <Button Grid.Column="1"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   Command="{Binding SearchStationsCommand}"
                                   VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{helpers:Translate Search.Button}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Stations ListView -->
                        <ListView Grid.Row="1"
                                 ItemsSource="{Binding Stations}"
                                 SelectedItem="{Binding SelectedStation}"
                                 Margin="8"
                                 MouseDoubleClick="StationsList_MouseDoubleClick">
                            <!-- Context Menu for right-click on stations -->
                            <ListView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="{helpers:Translate ContextMenu.Play}"
                                             Command="{Binding PlayStationContextMenuCommand}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="Play" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="{helpers:Translate ContextMenu.Stop}"
                                             Command="{Binding StopStationCommand}">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="Stop" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="{helpers:Translate ContextMenu.AddToFavorites}"
                                             Command="{Binding AddToFavoritesContextMenuCommand}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="Star" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="{helpers:Translate ContextMenu.RemoveFromFavorites}"
                                             Command="{Binding RemoveFromFavoritesContextMenuCommand}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="StarOutline" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="{helpers:Translate ContextMenu.CopyToMyStations}"
                                             Command="{Binding CopyToCustomStationsCommand}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="ContentCopy" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </ListView.ContextMenu>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="280">
                                        <GridViewColumn.Header>
                                            <Button Command="{Binding SortStationsCommand}"
                                                    CommandParameter="Name"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Padding="8,4"
                                                    HorizontalContentAlignment="Left">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{helpers:Translate StationList.Headers.Station}"
                                                              VerticalAlignment="Center"/>
                                                    <materialDesign:PackIcon Kind="ChevronUp"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="4,0,0,0">
                                                        <materialDesign:PackIcon.Visibility>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}">
                                                                <Binding Path="CurrentSortColumn"/>
                                                                <Binding Path="IsSortAscending"/>
                                                                <Binding Source="Name"/>
                                                            </MultiBinding>
                                                        </materialDesign:PackIcon.Visibility>
                                                    </materialDesign:PackIcon>
                                                    <materialDesign:PackIcon Kind="ChevronDown"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="4,0,0,0">
                                                        <materialDesign:PackIcon.Visibility>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}">
                                                                <Binding Path="CurrentSortColumn"/>
                                                                <Binding Path="IsSortAscending" Converter="{StaticResource InverseBooleanConverter}"/>
                                                                <Binding Source="Name"/>
                                                            </MultiBinding>
                                                        </materialDesign:PackIcon.Visibility>
                                                    </materialDesign:PackIcon>
                                                </StackPanel>
                                            </Button>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- Playing indicator - shown only for currently playing station -->
                                                    <materialDesign:PackIcon Kind="VolumeHigh"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,8,0"
                                                                            Foreground="#4CAF50">
                                                        <materialDesign:PackIcon.Visibility>
                                                            <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                                                                <Binding Path="."/>
                                                                <Binding Path="DataContext.CurrentlyPlayingStation" RelativeSource="{RelativeSource AncestorType=ListView}"/>
                                                            </MultiBinding>
                                                        </materialDesign:PackIcon.Visibility>
                                                    </materialDesign:PackIcon>

                                                    <!-- Radio icon - shown for all stations -->
                                                    <materialDesign:PackIcon Kind="Radio"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,8,0"
                                                                            Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                    <TextBlock Text="{Binding Name}"
                                                              VerticalAlignment="Center"
                                                              FontWeight="Medium"/>

                                                    <!-- Favorite button - toggles favorite status -->
                                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                                           Command="{Binding DataContext.ToggleFavoriteStationCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                           CommandParameter="{Binding}"
                                                           Width="24" Height="24"
                                                           Padding="0"
                                                           Margin="8,0,0,0"
                                                           ToolTip="{Binding IsFavorite, Converter={StaticResource FavoriteTooltipConverter}}"
                                                           VerticalAlignment="Center">
                                                        <Grid>
                                                            <!-- Filled star for favorites -->
                                                            <materialDesign:PackIcon Kind="Star"
                                                                                    Width="16" Height="16"
                                                                                    Foreground="#FFD700"
                                                                                    Visibility="{Binding IsFavorite, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                            <!-- Outline star for non-favorites -->
                                                            <materialDesign:PackIcon Kind="StarOutline"
                                                                                    Width="16" Height="16"
                                                                                    Opacity="0.6"
                                                                                    Visibility="{Binding IsFavorite, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                                <materialDesign:PackIcon.Style>
                                                                    <Style TargetType="materialDesign:PackIcon">
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Opacity" Value="1.0"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </materialDesign:PackIcon.Style>
                                                            </materialDesign:PackIcon>
                                                        </Grid>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="140">
                                        <GridViewColumn.Header>
                                            <Button Command="{Binding SortStationsCommand}"
                                                    CommandParameter="Country"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Padding="8,4"
                                                    HorizontalContentAlignment="Left">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{helpers:Translate StationList.Headers.Country}"
                                                              VerticalAlignment="Center"/>
                                                    <materialDesign:PackIcon Kind="ChevronUp"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="4,0,0,0">
                                                        <materialDesign:PackIcon.Visibility>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}">
                                                                <Binding Path="CurrentSortColumn"/>
                                                                <Binding Path="IsSortAscending"/>
                                                                <Binding Source="Country"/>
                                                            </MultiBinding>
                                                        </materialDesign:PackIcon.Visibility>
                                                    </materialDesign:PackIcon>
                                                    <materialDesign:PackIcon Kind="ChevronDown"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="4,0,0,0">
                                                        <materialDesign:PackIcon.Visibility>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}">
                                                                <Binding Path="CurrentSortColumn"/>
                                                                <Binding Path="IsSortAscending" Converter="{StaticResource InverseBooleanConverter}"/>
                                                                <Binding Source="Country"/>
                                                            </MultiBinding>
                                                        </materialDesign:PackIcon.Visibility>
                                                    </materialDesign:PackIcon>
                                                </StackPanel>
                                            </Button>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="MapMarker"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,6,0"
                                                                            Opacity="0.6"/>
                                                    <TextBlock Text="{Binding Country}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="160">
                                        <GridViewColumn.Header>
                                            <Button Command="{Binding SortStationsCommand}"
                                                    CommandParameter="Genre"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Padding="8,4"
                                                    HorizontalContentAlignment="Left">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{helpers:Translate StationList.Headers.Genre}"
                                                              VerticalAlignment="Center"/>
                                                    <materialDesign:PackIcon Kind="ChevronUp"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="4,0,0,0">
                                                        <materialDesign:PackIcon.Visibility>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}">
                                                                <Binding Path="CurrentSortColumn"/>
                                                                <Binding Path="IsSortAscending"/>
                                                                <Binding Source="Genre"/>
                                                            </MultiBinding>
                                                        </materialDesign:PackIcon.Visibility>
                                                    </materialDesign:PackIcon>
                                                    <materialDesign:PackIcon Kind="ChevronDown"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="4,0,0,0">
                                                        <materialDesign:PackIcon.Visibility>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}">
                                                                <Binding Path="CurrentSortColumn"/>
                                                                <Binding Path="IsSortAscending" Converter="{StaticResource InverseBooleanConverter}"/>
                                                                <Binding Source="Genre"/>
                                                            </MultiBinding>
                                                        </materialDesign:PackIcon.Visibility>
                                                    </materialDesign:PackIcon>
                                                </StackPanel>
                                            </Button>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Tags}" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="120">
                                        <GridViewColumn.Header>
                                            <Button Command="{Binding SortStationsCommand}"
                                                    CommandParameter="Codec"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Padding="8,4"
                                                    HorizontalContentAlignment="Left">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{helpers:Translate StationList.Headers.Quality}"
                                                              VerticalAlignment="Center"/>
                                                    <materialDesign:PackIcon Kind="ChevronUp"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="4,0,0,0">
                                                        <materialDesign:PackIcon.Visibility>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}">
                                                                <Binding Path="CurrentSortColumn"/>
                                                                <Binding Path="IsSortAscending"/>
                                                                <Binding Source="Codec"/>
                                                            </MultiBinding>
                                                        </materialDesign:PackIcon.Visibility>
                                                    </materialDesign:PackIcon>
                                                    <materialDesign:PackIcon Kind="ChevronDown"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="4,0,0,0">
                                                        <materialDesign:PackIcon.Visibility>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}">
                                                                <Binding Path="CurrentSortColumn"/>
                                                                <Binding Path="IsSortAscending" Converter="{StaticResource InverseBooleanConverter}"/>
                                                                <Binding Source="Codec"/>
                                                            </MultiBinding>
                                                        </materialDesign:PackIcon.Visibility>
                                                    </materialDesign:PackIcon>
                                                </StackPanel>
                                            </Button>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="HighDefinition"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,6,0"
                                                                            Opacity="0.6"/>
                                                    <TextBlock VerticalAlignment="Center">
                                                        <Run Text="{Binding Codec}"/>
                                                        <Run Text=" - "/>
                                                        <Run Text="{Binding Bitrate, StringFormat='{}{0} kbps'}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{helpers:Translate StationList.Headers.Actions}" Width="130">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                                       Command="{Binding DataContext.ShowStationDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                       CommandParameter="{Binding}"
                                                       Height="28"
                                                       Padding="8,4"
                                                       ToolTip="{helpers:Translate StationList.ViewDetails}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="InformationOutline"
                                                                                Width="16" Height="16"
                                                                                VerticalAlignment="Center"
                                                                                Margin="0,0,4,0"/>
                                                        <TextBlock Text="{helpers:Translate StationList.Details}" VerticalAlignment="Center" FontSize="11"/>
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Player Controls Bar -->
            <materialDesign:ColorZone Grid.Row="2" Mode="PrimaryLight" Padding="16" materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Playback Controls -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                Command="{Binding PlayStationCommand}"
                                IsEnabled="{Binding SelectedStation, Converter={StaticResource NullToBooleanConverter}}"
                                Width="56" Height="56"
                                Margin="0,0,16,0"
                                ToolTip="{helpers:Translate PlayerControls.Play}">
                            <materialDesign:PackIcon Kind="Play" Width="32" Height="32"/>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding StopStationCommand}"
                                IsEnabled="{Binding CanStop}"
                                Width="40" Height="40"
                                Margin="0,0,12,0"
                                ToolTip="{helpers:Translate PlayerControls.Stop}">
                            <materialDesign:PackIcon Kind="Stop" Width="24" Height="24"/>
                        </Button>

                        <!-- Recording Controls -->
                        <Border Width="1"
                                Height="40"
                                Background="{DynamicResource MaterialDesignDivider}"
                                Margin="16,0"
                                VerticalAlignment="Center"/>

                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding StartRecordingCommand}"
                                Width="40" Height="40"
                                Margin="0,0,12,0"
                                ToolTip="Start Recording"
                                Visibility="{Binding IsRecording, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <materialDesign:PackIcon Kind="Record" Width="24" Height="24" Foreground="#F44336"/>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding StopRecordingCommand}"
                                Width="40" Height="40"
                                Margin="0,0,12,0"
                                ToolTip="Stop Recording"
                                Visibility="{Binding IsRecording, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="Stop" Width="24" Height="24" Foreground="#F44336"/>
                                <Ellipse Width="8" Height="8" Fill="#F44336" HorizontalAlignment="Center" Margin="0,-4,0,0">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                   From="1.0" To="0.0" Duration="0:0:0.8"
                                                                   RepeatBehavior="Forever" AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                            </StackPanel>
                        </Button>

                        <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                                   Visibility="{Binding IsRecording, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="REC"
                                      FontSize="10"
                                      FontWeight="Bold"
                                      Foreground="#F44336"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding RecordingDuration}"
                                      FontSize="11"
                                      FontFamily="Consolas"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Status Display -->
                    <StackPanel Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Orientation="Horizontal"
                               Visibility="{Binding CurrentlyPlayingStation, Converter={StaticResource NullToVisibilityConverter}}">

                        <!-- Station Logo/Favicon -->
                        <Border Width="48" Height="48"
                                CornerRadius="4"
                                Background="{DynamicResource MaterialDesignDivider}"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center">
                            <Image x:Name="CurrentStationLogoImage"
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>

                        <!-- Station Info -->
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <!-- Station Name -->
                            <TextBlock Text="{Binding CurrentlyPlayingStation.Name}"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Left"
                                      MaxWidth="300"
                                      TextTrimming="CharacterEllipsis"/>

                            <!-- Now Playing Metadata -->
                            <TextBlock Text="{Binding NowPlaying, FallbackValue=''}"
                                      FontSize="12"
                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                      HorizontalAlignment="Left"
                                      Margin="0,2,0,0"
                                      MaxWidth="300"
                                      TextTrimming="CharacterEllipsis"
                                      Visibility="{Binding NowPlaying, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <!-- Playback Time -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,4,0,0">
                                <materialDesign:PackIcon Kind="Clock"
                                                        Width="14" Height="14"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,6,0"
                                                        Opacity="0.6"/>
                                <TextBlock Text="{Binding PlaybackDuration}"
                                          FontSize="11"
                                          FontFamily="Consolas"
                                          Foreground="{DynamicResource MaterialDesignBodyLight}"
                                          FontWeight="Medium"/>
                                <TextBlock Text=" â€¢ "
                                          FontSize="11"
                                          Foreground="{DynamicResource MaterialDesignBodyLight}"
                                          Margin="4,0"/>
                                <TextBlock Text="{Binding StatusMessage}"
                                          FontSize="11"
                                          Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>

                            <!-- Buffering Indicator -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,4,0,0"
                                       Visibility="{Binding IsBuffering, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <materialDesign:PackIcon Kind="Loading"
                                                        Width="14" Height="14"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,6,0">
                                    <materialDesign:PackIcon.RenderTransform>
                                        <RotateTransform/>
                                    </materialDesign:PackIcon.RenderTransform>
                                    <materialDesign:PackIcon.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                   From="0" To="360" Duration="0:0:2" RepeatBehavior="Forever"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </materialDesign:PackIcon.Triggers>
                                </materialDesign:PackIcon>
                                <TextBlock Text="{helpers:Translate MainWindow.Buffering}"
                                          FontSize="11"
                                          Foreground="{DynamicResource SecondaryHueMidBrush}"
                                          FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Default Status (when nothing is playing) -->
                    <TextBlock Grid.Column="1"
                              Text="{Binding StatusMessage, FallbackValue={helpers:Translate MainWindow.Ready}}"
                              FontSize="14"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Visibility="{Binding CurrentlyPlayingStation, Converter={StaticResource InverseNullToVisibilityConverter}}"/>

                    <!-- Volume Control -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="VolumeHigh"
                                                Width="24" Height="24"
                                                VerticalAlignment="Center"
                                                Margin="0,0,12,0"/>
                        <Slider Width="140"
                               Minimum="0"
                               Maximum="100"
                               Value="{Binding Volume, Mode=TwoWay, Converter={StaticResource VolumeConverter}}"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignDiscreteSlider}"/>
                        <TextBlock Text="{Binding Volume, StringFormat='{}{0:F0}%', Converter={StaticResource VolumePercentConverter}}"
                                  VerticalAlignment="Center"
                                  Margin="12,0,0,0"
                                  Width="45"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window>
