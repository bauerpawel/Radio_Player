<Window x:Class="RadioPlayer.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Radio Player"
        Height="600"
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header/Now Playing -->
            <RowDefinition Height="*"/>     <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Player Controls -->
        </Grid.RowDefinitions>

        <!-- Header / Now Playing Section -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryBrush}"
                Padding="20">
            <StackPanel>
                <TextBlock Text="Radio Player"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="White"
                          Margin="0,0,0,10"/>
                <TextBlock Text="{Binding NowPlaying, FallbackValue='Select a station to start playing'}"
                          FontSize="16"
                          Foreground="White"
                          Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Margin="0,0,10,0"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Navigation"
                              FontSize="14"
                              FontWeight="Bold"
                              Margin="0,0,0,15"/>

                    <Button Content="Top Stations"
                            Command="{Binding LoadTopStationsCommand}"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Stretch"
                            Padding="10"/>
                    <Button Content="Favorites"
                            Command="{Binding LoadFavoritesCommand}"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Stretch"
                            Padding="10"/>
                    <Button Content="Search"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Stretch"
                            Padding="10"
                            Click="SearchButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Station List / Content Area -->
            <Border Grid.Column="1"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Bar -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                Padding="10"
                                FontSize="14"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                VerticalContentAlignment="Center">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchStationsCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <Button Grid.Column="1"
                                Content="Search"
                                Command="{Binding SearchStationsCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Margin="10,0,0,0"
                                Padding="20,10"/>
                    </Grid>

                    <!-- Stations List -->
                    <ListView Grid.Row="1"
                             ItemsSource="{Binding Stations}"
                             SelectedItem="{Binding SelectedStation}"
                             Background="White"
                             BorderThickness="0"
                             MouseDoubleClick="StationsList_MouseDoubleClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Station Name" Width="250" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Country" Width="120" DisplayMemberBinding="{Binding Country}"/>
                                <GridViewColumn Header="Genre" Width="150" DisplayMemberBinding="{Binding Tags}"/>
                                <GridViewColumn Header="Codec" Width="80" DisplayMemberBinding="{Binding Codec}"/>
                                <GridViewColumn Header="Bitrate" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Bitrate, StringFormat='{}{0} kbps'}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
        </Grid>

        <!-- Player Controls -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Playback Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="â–¶ Play"
                            Command="{Binding PlayStationCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,10,0"
                            Width="100"
                            IsEnabled="{Binding SelectedStation, Converter={StaticResource NullToBooleanConverter}}"/>
                    <Button Content="â¹ Stop"
                            Command="{Binding StopStationCommand}"
                            Padding="16,8"
                            Width="100"
                            IsEnabled="{Binding IsPlaying}"/>
                    <Button Content="â­"
                            Command="{Binding ToggleFavoriteCommand}"
                            Margin="10,0,0,0"
                            Padding="16,8"
                            Width="50"
                            FontSize="16"
                            IsEnabled="{Binding SelectedStation, Converter={StaticResource NullToBooleanConverter}}"
                            ToolTip="Add to Favorites"/>
                </StackPanel>

                <!-- Status Display -->
                <StackPanel Grid.Column="1"
                           Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready'}"
                              FontSize="12"
                              Foreground="{StaticResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding IsBuffering, Converter={StaticResource BoolToBufferingConverter}}"
                              FontSize="12"
                              Foreground="{StaticResource AccentBrush}"
                              Margin="10,0,0,0"
                              FontWeight="Bold"/>
                </StackPanel>

                <!-- Volume Control -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="ðŸ”Š"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="16"/>
                    <Slider Width="120"
                           Minimum="0"
                           Maximum="100"
                           Value="{Binding Volume, Mode=TwoWay, Converter={StaticResource VolumeConverter}}"
                           VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Volume, StringFormat='{}{0:F0}%', Converter={StaticResource VolumePercentConverter}}"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"
                              Width="40"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
