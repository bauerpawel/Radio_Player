<Window x:Class="RadioPlayer.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Radio Player"
        Height="800"
        Width="1100"
        MinHeight="700"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- App Bar -->
                <RowDefinition Height="*"/>     <!-- Main Content -->
                <RowDefinition Height="Auto"/> <!-- Player Controls -->
            </Grid.RowDefinitions>

            <!-- Material Design App Bar / Header -->
            <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryDark" Padding="16" materialDesign:ElevationAssist.Elevation="Dp4">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <materialDesign:PackIcon Kind="Radio" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Radio Player" FontSize="20" FontWeight="Medium"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <materialDesign:PackIcon Kind="PlayCircle"
                                                        Width="16" Height="16"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,6,0"
                                                        Visibility="{Binding CurrentlyPlayingStation, Converter={StaticResource NullToVisibilityConverter}}"/>
                                <TextBlock VerticalAlignment="Center" Opacity="0.9">
                                    <Run Text="{Binding CurrentlyPlayingStation.Name, Mode=OneWay}" FontWeight="Medium"/>
                                    <Run Text=" â€¢ " Foreground="{DynamicResource PrimaryHueLightBrush}"/>
                                    <Run Text="{Binding CurrentTrack, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock Text="Select a station to start playing"
                                      FontSize="12"
                                      Opacity="0.7"
                                      TextTrimming="CharacterEllipsis"
                                      Visibility="{Binding CurrentlyPlayingStation, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding OpenSettingsCommand}"
                                ToolTip="Settings - Configure buffer sizes"
                                Margin="8,0">
                            <materialDesign:PackIcon Kind="Settings"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding ShowStreamInfoCommand}"
                                IsEnabled="{Binding SelectedStation, Converter={StaticResource NullToBooleanConverter}}"
                                ToolTip="Stream Info - View stream details"
                                Margin="8,0">
                            <materialDesign:PackIcon Kind="InformationOutline"/>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar Navigation -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,16,0" materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel Margin="16">
                        <TextBlock Text="Browse"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"
                                  Margin="0,0,0,12"/>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding LoadTopStationsCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TrendingUp" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Top Stations" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding LoadFavoritesCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Star" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Favorites" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,16" />

                        <TextBlock Text="Filters"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"
                                  Margin="0,0,0,12"/>

                        <ComboBox materialDesign:HintAssist.Hint="Country"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 ItemsSource="{Binding AvailableCountries}"
                                 Text="{Binding CountryFilter, UpdateSourceTrigger=PropertyChanged}"
                                 IsEditable="True"
                                 Margin="0,0,0,12"/>

                        <TextBox materialDesign:HintAssist.Hint="Language"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding LanguageFilter, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12"/>

                        <TextBox materialDesign:HintAssist.Hint="Genre"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding GenreFilter, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12"/>

                        <ComboBox materialDesign:HintAssist.Hint="Codec"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 Text="{Binding CodecFilter, UpdateSourceTrigger=PropertyChanged}"
                                 IsEditable="True"
                                 Margin="0,0,0,12">
                            <ComboBoxItem Content=""/>
                            <ComboBoxItem Content="MP3"/>
                            <ComboBoxItem Content="AAC"/>
                            <ComboBoxItem Content="OGG"/>
                        </ComboBox>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding LoadTopStationsCommand}"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilterOutline" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Apply Filters" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </materialDesign:Card>

                <!-- Station List Area -->
                <materialDesign:Card Grid.Column="1" materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search Bar -->
                        <Grid Grid.Row="0" Margin="16,16,16,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                    materialDesign:HintAssist.Hint="Search stations by name, genre, or country..."
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,12,0">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SearchStationsCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>

                            <Button Grid.Column="1"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   Command="{Binding SearchStationsCommand}"
                                   VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Search" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Stations ListView -->
                        <ListView Grid.Row="1"
                                 ItemsSource="{Binding Stations}"
                                 SelectedItem="{Binding SelectedStation}"
                                 Margin="8"
                                 MouseDoubleClick="StationsList_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Station" Width="280">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- Playing indicator - shown only for currently playing station -->
                                                    <materialDesign:PackIcon Kind="VolumeHigh"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,8,0"
                                                                            Foreground="#4CAF50">
                                                        <materialDesign:PackIcon.Visibility>
                                                            <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                                                                <Binding Path="."/>
                                                                <Binding Path="DataContext.CurrentlyPlayingStation" RelativeSource="{RelativeSource AncestorType=ListView}"/>
                                                            </MultiBinding>
                                                        </materialDesign:PackIcon.Visibility>
                                                    </materialDesign:PackIcon>

                                                    <!-- Radio icon - shown for all stations -->
                                                    <materialDesign:PackIcon Kind="Radio"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,8,0"
                                                                            Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                    <TextBlock Text="{Binding Name}"
                                                              VerticalAlignment="Center"
                                                              FontWeight="Medium"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Country" Width="140">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="MapMarker"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,6,0"
                                                                            Opacity="0.6"/>
                                                    <TextBlock Text="{Binding Country}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Genre" Width="160" DisplayMemberBinding="{Binding Tags}"/>

                                    <GridViewColumn Header="Quality" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="HighDefinition"
                                                                            Width="14" Height="14"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,6,0"
                                                                            Opacity="0.6"/>
                                                    <TextBlock VerticalAlignment="Center">
                                                        <Run Text="{Binding Codec}"/>
                                                        <Run Text=" - "/>
                                                        <Run Text="{Binding Bitrate, StringFormat='{}{0} kbps'}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Actions" Width="90">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                                       Command="{Binding DataContext.ShowStationDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                       CommandParameter="{Binding}"
                                                       Height="28"
                                                       Padding="8,4"
                                                       ToolTip="View station details">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="InformationOutline"
                                                                                Width="16" Height="16"
                                                                                VerticalAlignment="Center"
                                                                                Margin="0,0,4,0"/>
                                                        <TextBlock Text="Details" VerticalAlignment="Center" FontSize="11"/>
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Player Controls Bar -->
            <materialDesign:ColorZone Grid.Row="2" Mode="PrimaryLight" Padding="16" materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Playback Controls -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                Command="{Binding PlayStationCommand}"
                                IsEnabled="{Binding SelectedStation, Converter={StaticResource NullToBooleanConverter}}"
                                Width="56" Height="56"
                                Margin="0,0,16,0"
                                ToolTip="Play selected station">
                            <materialDesign:PackIcon Kind="Play" Width="32" Height="32"/>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding StopStationCommand}"
                                IsEnabled="{Binding CanStop}"
                                Width="40" Height="40"
                                Margin="0,0,12,0"
                                ToolTip="Stop playback">
                            <materialDesign:PackIcon Kind="Stop" Width="24" Height="24"/>
                        </Button>

                        <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                     Command="{Binding ToggleFavoriteCommand}"
                                     IsEnabled="{Binding SelectedStation, Converter={StaticResource NullToBooleanConverter}}"
                                     Width="40" Height="40"
                                     ToolTip="Add to favorites">
                            <ToggleButton.Content>
                                <materialDesign:PackIcon Kind="StarOutline" Width="24" Height="24"/>
                            </ToggleButton.Content>
                            <materialDesign:ToggleButtonAssist.OnContent>
                                <materialDesign:PackIcon Kind="Star" Width="24" Height="24"/>
                            </materialDesign:ToggleButtonAssist.OnContent>
                        </ToggleButton>
                    </StackPanel>

                    <!-- Status Display -->
                    <StackPanel Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Orientation="Horizontal"
                               Visibility="{Binding CurrentlyPlayingStation, Converter={StaticResource NullToVisibilityConverter}}">

                        <!-- Station Logo/Favicon -->
                        <Border Width="48" Height="48"
                                CornerRadius="4"
                                Background="{DynamicResource MaterialDesignDivider}"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center">
                            <Image x:Name="CurrentStationLogoImage"
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>

                        <!-- Station Info -->
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <!-- Station Name -->
                            <TextBlock Text="{Binding CurrentlyPlayingStation.Name}"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Left"
                                      MaxWidth="300"
                                      TextTrimming="CharacterEllipsis"/>

                            <!-- Now Playing Metadata -->
                            <TextBlock Text="{Binding NowPlaying, FallbackValue=''}"
                                      FontSize="12"
                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                      HorizontalAlignment="Left"
                                      Margin="0,2,0,0"
                                      MaxWidth="300"
                                      TextTrimming="CharacterEllipsis"
                                      Visibility="{Binding NowPlaying, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <!-- Buffering Indicator -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,4,0,0"
                                       Visibility="{Binding IsBuffering, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <materialDesign:PackIcon Kind="Loading"
                                                        Width="14" Height="14"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,6,0">
                                    <materialDesign:PackIcon.RenderTransform>
                                        <RotateTransform/>
                                    </materialDesign:PackIcon.RenderTransform>
                                    <materialDesign:PackIcon.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                   From="0" To="360" Duration="0:0:2" RepeatBehavior="Forever"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </materialDesign:PackIcon.Triggers>
                                </materialDesign:PackIcon>
                                <TextBlock Text="Buffering..."
                                          FontSize="11"
                                          Foreground="{DynamicResource SecondaryHueMidBrush}"
                                          FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Default Status (when nothing is playing) -->
                    <TextBlock Grid.Column="1"
                              Text="{Binding StatusMessage, FallbackValue='Ready'}"
                              FontSize="14"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Visibility="{Binding CurrentlyPlayingStation, Converter={StaticResource InverseNullToVisibilityConverter}}"/>

                    <!-- Volume Control -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="VolumeHigh"
                                                Width="24" Height="24"
                                                VerticalAlignment="Center"
                                                Margin="0,0,12,0"/>
                        <Slider Width="140"
                               Minimum="0"
                               Maximum="100"
                               Value="{Binding Volume, Mode=TwoWay, Converter={StaticResource VolumeConverter}}"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignDiscreteSlider}"/>
                        <TextBlock Text="{Binding Volume, StringFormat='{}{0:F0}%', Converter={StaticResource VolumePercentConverter}}"
                                  VerticalAlignment="Center"
                                  Margin="12,0,0,0"
                                  Width="45"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window>
