<Window x:Class="RadioPlayer.WPF.Views.AddCustomStationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:RadioPlayer.WPF.Helpers"
        Title="{helpers:Translate CustomStation.AddTitle}" Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{helpers:Translate CustomStation.AddTitle}" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Stream URL -->
                <TextBlock Text="{helpers:Translate CustomStation.StreamUrl}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="StreamUrlTextBox"
                         materialDesign:HintAssist.Hint="{helpers:Translate CustomStation.StreamUrlHint}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,10"/>
                <TextBlock Text="{helpers:Translate CustomStation.StreamUrlDescription}"
                          TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

                <!-- Test Stream Button -->
                <Button x:Name="TestStreamButton"
                       Click="TestStreamButton_Click"
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,10">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Play" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="{helpers:Translate CustomStation.TestStream}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!-- Validation Status -->
                <Border x:Name="ValidationStatusPanel"
                        Background="{DynamicResource MaterialDesignPaper}"
                        BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,0,0,15"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock x:Name="ValidationStatusText"
                                  FontWeight="Bold"
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="ValidationDetailsText"
                                  TextWrapping="Wrap"
                                  FontSize="11"/>
                    </StackPanel>
                </Border>

                <Separator Margin="0,10,0,20"/>

                <!-- Station Name -->
                <TextBlock Text="{helpers:Translate CustomStation.StationName}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="StationNameTextBox"
                         materialDesign:HintAssist.Hint="{helpers:Translate CustomStation.StationNameHint}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <!-- Logo URL -->
                <TextBlock Text="{helpers:Translate CustomStation.LogoUrl}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="LogoUrlTextBox"
                         materialDesign:HintAssist.Hint="{helpers:Translate CustomStation.LogoUrlHint}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <!-- Genre/Tags -->
                <TextBlock Text="{helpers:Translate CustomStation.Genre}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="GenreTextBox"
                         materialDesign:HintAssist.Hint="{helpers:Translate CustomStation.GenreHint}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <!-- Country -->
                <TextBlock Text="{helpers:Translate CustomStation.Country}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="CountryTextBox"
                         materialDesign:HintAssist.Hint="{helpers:Translate CustomStation.CountryHint}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <!-- Language -->
                <TextBlock Text="{helpers:Translate CustomStation.Language}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="LanguageTextBox"
                         materialDesign:HintAssist.Hint="{helpers:Translate CustomStation.LanguageHint}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <!-- Homepage URL -->
                <TextBlock Text="{helpers:Translate CustomStation.Homepage}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="HomepageTextBox"
                         materialDesign:HintAssist.Hint="{helpers:Translate CustomStation.HomepageHint}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="AddButton"
                   Click="AddButton_Click"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   IsDefault="True"
                   Margin="0,0,10,0">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{helpers:Translate CustomStation.Add}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Content="{helpers:Translate CustomStation.Cancel}"
                   Click="CancelButton_Click"
                   Style="{StaticResource MaterialDesignFlatButton}"
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
