<Window x:Class="RadioPlayer.WPF.Views.StreamInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:RadioPlayer.WPF.Helpers"
        Title="{helpers:Translate StreamInfo.Title}" Height="500" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{helpers:Translate StreamInfo.Title}" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="StationNameText" FontSize="14" Foreground="{DynamicResource MaterialDesignBodyLight}" Margin="0,5,0,0"/>
        </StackPanel>

        <materialDesign:Card Grid.Row="1" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Station Info -->
                    <TextBlock Text="{helpers:Translate StreamInfo.StationDetails}" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{helpers:Translate StreamInfo.Country}" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CountryText" Margin="0,5" FontWeight="Medium"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{helpers:Translate StreamInfo.Language}" Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LanguageText" Margin="0,5" FontWeight="Medium"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{helpers:Translate StreamInfo.Tags}" Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TagsText" Margin="0,5" FontWeight="Medium" TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="{helpers:Translate StreamInfo.Homepage}" Margin="0,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="HomepageText" Margin="0,5" FontWeight="Medium" TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="{helpers:Translate StreamInfo.StreamUrl}" Margin="0,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="UrlText" Margin="0,5" FontWeight="Medium" TextWrapping="Wrap" FontSize="10"/>
                    </Grid>

                    <Separator Margin="0,15"/>

                    <!-- Stream Technical Info -->
                    <TextBlock Text="{helpers:Translate StreamInfo.TechnicalDetails}" FontWeight="Bold" FontSize="14" Margin="0,10,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{helpers:Translate StreamInfo.Codec}" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CodecText" Margin="0,5" FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{helpers:Translate StreamInfo.Bitrate}" Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="BitrateText" Margin="0,5" FontWeight="Medium"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{helpers:Translate StreamInfo.SampleRate}" Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="SampleRateText" Margin="0,5" FontWeight="Medium"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="{helpers:Translate StreamInfo.Channels}" Margin="0,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="ChannelsText" Margin="0,5" FontWeight="Medium"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="{helpers:Translate StreamInfo.BufferStatus}" Margin="0,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="BufferText" Margin="0,5" FontWeight="Medium"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="{helpers:Translate StreamInfo.PlaybackState}" Margin="0,5"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" x:Name="StateText" Margin="0,5" FontWeight="Medium"/>
                    </Grid>

                    <Separator Margin="0,15"/>

                    <!-- Now Playing -->
                    <TextBlock Text="{helpers:Translate StreamInfo.NowPlaying}" FontWeight="Bold" FontSize="14" Margin="0,10,0,10"/>
                    <TextBlock x:Name="NowPlayingText" TextWrapping="Wrap" FontSize="13" Margin="0,5"/>
                </StackPanel>
            </ScrollViewer>
        </materialDesign:Card>

        <Button Grid.Row="2" Content="{helpers:Translate StreamInfo.Close}" Click="CloseButton_Click"
               Style="{StaticResource MaterialDesignRaisedButton}"
               HorizontalAlignment="Right" Margin="0,15,0,0"
               IsDefault="True" IsCancel="True"/>
    </Grid>
</Window>
