<Window x:Class="RadioPlayer.WPF.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Buffer Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Adjust buffer sizes if you experience stuttering or playback issues."
                      TextWrapping="Wrap" Foreground="{DynamicResource MaterialDesignBodyLight}" Margin="0,0,0,10"/>

            <!-- Total Buffer Duration -->
            <StackPanel Margin="0,0,0,15">
                <DockPanel Margin="0,0,0,5">
                    <TextBlock Text="Total Buffer Duration (seconds)" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ElementName=BufferSlider, Path=Value, StringFormat='{}{0:F1}s'}"
                              DockPanel.Dock="Right" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </DockPanel>
                <Slider x:Name="BufferSlider"
                       Minimum="3" Maximum="30" Value="10"
                       TickFrequency="1" IsSnapToTickEnabled="True"
                       Style="{StaticResource MaterialDesignDiscreteSlider}"/>
                <TextBlock Text="Higher values = smoother playback, more latency" FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Pre-Buffer Duration -->
            <StackPanel Margin="0,0,0,15">
                <DockPanel Margin="0,0,0,5">
                    <TextBlock Text="Pre-Buffer Duration (seconds)" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ElementName=PreBufferSlider, Path=Value, StringFormat='{}{0:F1}s'}"
                              DockPanel.Dock="Right" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </DockPanel>
                <Slider x:Name="PreBufferSlider"
                       Minimum="1" Maximum="10" Value="3"
                       TickFrequency="0.5" IsSnapToTickEnabled="True"
                       Style="{StaticResource MaterialDesignDiscreteSlider}"/>
                <TextBlock Text="How much data to buffer before starting playback" FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>

            <TextBlock Text="ðŸ’¡ Recommended: 10s total buffer, 3s pre-buffer"
                      FontSize="12" FontStyle="Italic" Foreground="{DynamicResource SecondaryHueMidBrush}" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reset to Default"
                   Click="ResetButton_Click"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Margin="0,0,10,0"/>
            <Button Content="Save"
                   Click="SaveButton_Click"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   IsDefault="True"
                   Margin="0,0,10,0"/>
            <Button Content="Cancel"
                   Click="CancelButton_Click"
                   Style="{StaticResource MaterialDesignFlatButton}"
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
