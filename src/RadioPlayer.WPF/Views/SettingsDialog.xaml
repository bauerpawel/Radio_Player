<Window x:Class="RadioPlayer.WPF.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Debug Logging -->
                <TextBlock Text="Debug Logging" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <CheckBox x:Name="DebugLoggingCheckBox"
                         Content="Enable debug logging to file"
                         Margin="0,0,0,10"/>
                <TextBlock Text="Logs buffering and playback details to help diagnose issues. File saved to application directory."
                          TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,0,0,0"/>

                <Separator Margin="0,20"/>

                <!-- Minimize to Tray -->
                <TextBlock Text="Window Behavior" FontWeight="Bold" FontSize="14" Margin="0,10,0,10"/>
                <CheckBox x:Name="MinimizeToTrayCheckBox"
                         Content="Minimize to system tray instead of taskbar"
                         Margin="0,0,0,10"/>
                <TextBlock Text="When enabled, minimizing the window will send it to the system tray instead of the taskbar."
                          TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,0,0,0"/>

                <Separator Margin="0,20"/>

                <!-- Language Selection -->
                <TextBlock Text="Language" FontWeight="Bold" FontSize="14" Margin="0,10,0,10"/>
                <ComboBox x:Name="LanguageComboBox"
                         Margin="0,0,0,10">
                    <ComboBoxItem Content="Polski (Polish)" Tag="pl"/>
                    <ComboBoxItem Content="English" Tag="en"/>
                    <ComboBoxItem Content="Deutsch (German)" Tag="de"/>
                </ComboBox>
                <TextBlock Text="Select the interface language. Application restart required for changes to take full effect."
                          TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,0,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reset to Default"
                   Click="ResetButton_Click"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Margin="0,0,10,0"/>
            <Button Content="Save"
                   Click="SaveButton_Click"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   IsDefault="True"
                   Margin="0,0,10,0"/>
            <Button Content="Cancel"
                   Click="CancelButton_Click"
                   Style="{StaticResource MaterialDesignFlatButton}"
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
