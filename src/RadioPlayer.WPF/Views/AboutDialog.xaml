<Window x:Class="RadioPlayer.WPF.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="About Radio Player" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Icon and Title -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="Radio"
                                    Width="80" Height="80"
                                    HorizontalAlignment="Center"
                                    Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="Radio Player"
                      FontSize="32"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,15,0,5"/>
            <TextBlock Text="Version 1.0"
                      FontSize="16"
                      HorizontalAlignment="Center"
                      Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Description -->
                <materialDesign:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="About"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock TextWrapping="Wrap"
                                  LineHeight="22">
                            Radio Player is a modern desktop application for streaming internet radio stations.
                            Enjoy thousands of radio stations from around the world with a beautiful Material Design interface.
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Features -->
                <materialDesign:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Features"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Check" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Browse thousands of internet radio stations" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Check" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Search by name, country, language, and genre" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Check" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Save your favorite stations" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Check" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="View playback history" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Check" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Minimize to system tray" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Repository -->
                <materialDesign:Card Margin="0,0,0,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Source Code"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                            This project is open source and available on GitHub:
                        </TextBlock>
                        <TextBlock>
                            <Hyperlink NavigateUri="https://github.com/bauerpawel/Radio_Player"
                                      RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="https://github.com/bauerpawel/Radio_Player"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2"
               Content="Close"
               Click="CloseButton_Click"
               Style="{StaticResource MaterialDesignRaisedButton}"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"
               Padding="30,8"
               IsCancel="True"/>
    </Grid>
</Window>
