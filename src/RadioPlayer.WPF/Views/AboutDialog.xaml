<Window x:Class="RadioPlayer.WPF.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="About Radio Player" Height="600" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Icon and Title -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="Radio"
                                    Width="80" Height="80"
                                    HorizontalAlignment="Center"
                                    Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="Radio Player"
                      FontSize="32"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,15,0,5"/>
            <TextBlock Text="Version 1.0"
                      FontSize="16"
                      HorizontalAlignment="Center"
                      Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Description -->
                <materialDesign:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="About"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock TextWrapping="Wrap"
                                  LineHeight="24">
                            <Run FontWeight="SemiBold">Radio Player</Run> is a modern, open-source desktop application for streaming internet radio stations.
                            Built with cutting-edge .NET 10 and WPF technologies, it provides seamless access to over 51,000 radio stations from around the world.
                            <LineBreak/><LineBreak/>
                            Featuring a beautiful Material Design interface, intelligent buffering, and multi-format audio support (MP3, AAC, OGG Vorbis),
                            Radio Player delivers a premium listening experience with features like favorites management, playback history tracking, and system tray integration.
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Features -->
                <materialDesign:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Key Features"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="RadioTower" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Access to 51,000+ internet radio stations worldwide" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Advanced search by name, country, language, and genre" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="MusicNote" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Multi-format streaming: MP3, AAC, OGG Vorbis" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Heart" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Save and organize your favorite stations" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="History" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Track listening history with duration statistics" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="TrayFull" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Minimize to system tray for background playback" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Tune" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Configurable buffering for optimal performance" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Palette" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Beautiful Material Design interface" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Technology -->
                <materialDesign:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Technology"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock TextWrapping="Wrap" LineHeight="22">
                            Built with <Run FontWeight="SemiBold">.NET 10</Run> and <Run FontWeight="SemiBold">WPF</Run> for Windows desktop.
                            Powered by <Run FontWeight="SemiBold">NAudio</Run> for high-quality audio streaming,
                            <Run FontWeight="SemiBold">MaterialDesignThemes</Run> for stunning UI,
                            and the <Run FontWeight="SemiBold">Radio Browser API</Run> for access to thousands of stations.
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Repository -->
                <materialDesign:Card Margin="0,0,0,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Open Source"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="22">
                            This project is <Run FontWeight="SemiBold">open source</Run> and licensed under the <Run FontWeight="SemiBold">Apache-2.0 License</Run>.
                            Contributions, bug reports, and feature requests are welcome on GitHub:
                        </TextBlock>
                        <TextBlock>
                            <Hyperlink NavigateUri="https://github.com/bauerpawel/Radio_Player"
                                      RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="https://github.com/bauerpawel/Radio_Player"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2"
               Content="Close"
               Click="CloseButton_Click"
               Style="{StaticResource MaterialDesignRaisedButton}"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"
               Padding="30,8"
               IsCancel="True"/>
    </Grid>
</Window>
