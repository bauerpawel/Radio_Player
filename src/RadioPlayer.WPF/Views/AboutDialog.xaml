<Window x:Class="RadioPlayer.WPF.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:RadioPlayer.WPF.Helpers"
        Title="{helpers:Translate About.Title}" Height="600" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Icon and Title -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="Radio"
                                    Width="80" Height="80"
                                    HorizontalAlignment="Center"
                                    Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="{helpers:Translate AppName}"
                      FontSize="32"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,15,0,5"/>
            <TextBlock Text="{helpers:Translate Version}"
                      FontSize="16"
                      HorizontalAlignment="Center"
                      Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Description -->
                <materialDesign:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{helpers:Translate About.About}"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="{helpers:Translate About.Description}"
                                  TextWrapping="Wrap"
                                  LineHeight="24"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Features -->
                <materialDesign:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{helpers:Translate About.KeyFeatures}"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="RadioTower" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="{helpers:Translate About.Features.Access}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="{helpers:Translate About.Features.Search}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="MusicNote" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="{helpers:Translate About.Features.Streaming}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Heart" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="{helpers:Translate About.Features.Favorites}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="History" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="{helpers:Translate About.Features.History}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="TrayFull" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="{helpers:Translate About.Features.SystemTray}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Tune" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="{helpers:Translate About.Features.Buffering}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <materialDesign:PackIcon Kind="Palette" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="{helpers:Translate About.Features.Design}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Technology -->
                <materialDesign:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{helpers:Translate About.Technology}"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="{helpers:Translate About.TechnologyDescription}"
                                  TextWrapping="Wrap"
                                  LineHeight="22"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Repository -->
                <materialDesign:Card Margin="0,0,0,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{helpers:Translate About.OpenSource}"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="{helpers:Translate About.OpenSourceDescription}"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,10"
                                  LineHeight="22"/>
                        <TextBlock>
                            <Hyperlink NavigateUri="https://github.com/bauerpawel/Radio_Player"
                                      RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="https://github.com/bauerpawel/Radio_Player"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2"
               Content="{helpers:Translate About.Close}"
               Click="CloseButton_Click"
               Style="{StaticResource MaterialDesignRaisedButton}"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"
               Padding="30,8"
               IsCancel="True"/>
    </Grid>
</Window>
